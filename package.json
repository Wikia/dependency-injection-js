{
  "name": "@wikia/dependency-injection",
  "version": "0.0.0",
  "description": "A Lightweight dependency injection container for typescript and javascript.",
  "contributors": [
    "Damian Bielecki <dbielecki@fandom.com>"
  ],
  "keywords": [
    "ioc",
    "di",
    "javascript",
    "typescript",
    "node",
    "dependency injection",
    "dependency inversion",
    "inversion of control"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Wikia/dependency-injection-js.git"
  },
  "license": "MIT",
  "files": [
    "dist/"
  ],
  "main": "./dist/commonjs/index.js",
  "module": "./dist/module/index.js",
  "typings": "./dist/types/index.d.ts",
  "scripts": {
    "start": "tsc -w",
    "prepublishOnly": "npm run build",
    "prebuild": "rimraf dist",
    "build": "npm run clean && npm run tsc",
    "watch": "npm run tsc:module -- -w",
    "clean": "rimraf dist",
    "lint": "tslint ./src/**/*.ts ./e2e/**/*.ts",
    "lint:fix": "tslint --fix ./src/**/*.ts ./e2e/**/*.ts -t verbose",
    "prettier": "prettier --write '**/*.{ts,js,json,css,scss,html}'",
    "format": "npm run prettier && npm run lint:fix",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "tsc": "npm run tsc:module && npm run tsc:commonjs",
    "tsc:module": "tsc --project tsconfig.module.json",
    "tsc:commonjs": "tsc",
    "commit": "git-cz"
  },
  "dependencies": {
    "reflect-metadata": "^0.1.13",
    "require-glob": "^3.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "@types/jest": "^24.0.18",
    "@types/node": "^8.10.19",
    "commitizen": "^3.0.0",
    "coveralls": "^3.0.6",
    "cross-env": "^5.2.0",
    "husky": "^3.0.5",
    "istanbul": "^0.4.5",
    "jest": "^24.9.0",
    "lint-staged": "^9.2.5",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.9",
    "ts-jest": "^24.1.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.15.0",
    "cz-conventional-changelog": "^2.1.0",
    "typescript": "^3.0.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  }
}
